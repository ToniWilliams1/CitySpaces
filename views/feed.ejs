<% for(var i=0; i<posts.length; i++) {%>
<div class="post">
  <div class="info">
    <div class="user">
      <p class="username"><%=posts[i].userName %></p>
    </div>
  </div>
  <ul>
  <li class="col-6 justify-content-between mt-5">
    <a href="/post/<%= posts[i]._id%>">
  </li>
  </ul>
  <img src="<%= posts[i].image%>" class="post-img" alt="View Full Post" /></a>
  <div class="post-content">
    <div class="reaction-wrapper">
          <button class="trash-btn  fa fa-trash"></button>
    </div>
    <%if(posts[i].likes > 1)  {%>
    <p class="likes"> <i class="fa fa-heart"></i> <%=posts[i].likes %></p>
     <%}else {%>
      <p class="likes"> <i class="fa fa-heart"></i> <%=posts[i].likes %> </p>
      <% } %>
    <p class="description"><span><%=posts[i].user %></span> Title: <%=posts[i].title %></p>
    <p class="description"><span> Caption: <%=posts[i].caption %></span> </p>
    <p class="post-time"><i class="fa-solid fa-clock"></i> <%=posts[i].createdAt %></p>
  </div>
</div>   
<% } %>
