<body>
<h2 class="text-5xl font-bold">Volunteer Spaces</h2>
  <button class="btn btn-secondary">Filter <i class="fa-solid fa-filter"></i></button>
  
  <form method="get" action="/events">
    <label for="recurrence_type-select">Filter by Borough:</label>
    <select id="recurrence_type-select" name="recurrence_type[]" multiple>
      <option value="">All</option>
      <option value="ongoing">On Going</option>
      <option value="onetime">One Time</option>
    </select>
    <label for="borough-select">Filter by Borough:</label>
    <select id="borough-select" name="borough[]" multiple>
      <option value="BRONX">Bronx</option>
      <option value="Brooklyn">Brooklyn</option>
      <option value="Manhattan">Manhattan</option>
      <option value="Queens">Queens</option>
      <option value="Staten Island">Staten Island</option>
    </select>
    <button type="submit">Filter</button>
  </form>

  <ul>
    <div class="badge badge-lg"> <%= events.length %> </div>

    <% events.forEach(event => { %>
      <li>
        <p><%= event.borough %></p>
        <p><%= event.recurrence_type %></p>
      </li>
    <% }) %>
  </ul>

  
  <div class="card w-96  w-1/2 bg-base-100 shadow-xl">
    <div class="card-body">
      <div class="card-actions justify-end">
      </div>
      <h2><i class="fa-solid fa-map-pin"></i> Location</h2>
      <input type="checkbox" checked="unchecked" class="checkbox" /> <p>The Bronx</p>
      <input type="checkbox" checked="unchecked" class="checkbox" /><p>Brooklyn</p>
      <input type="checkbox" checked="unchecked" class="checkbox" /> <p>Manhattan</p>
      <input type="checkbox" checked="unchecked" class="checkbox" /><p>Queens</p>
    </div>
  </div>
    <% events.forEach(data => { %>
        <div class="card w-1/3  ">
          <div class="flex-container">

          <div class="card-body">
            <form
            class="col-1"
            action="/like-event/<%= data.opportunity_id %>" 
            method="GET"
          >
            <button class="btn-save fa fa-bookmark" type="submit"></button>
          </form>
            <h2 class="card-title"> <em><%= %></h2>
                <p class="card-title"> <em><%= data.recurrence_type %></p>
                <div class="card-actions justify-end">
   <p><i class="fa-solid fa-map-pin"></i> <%= data.borough %></p>
            <h2>  <%=data.summary %></h2>
<a href="<%= data.display_url %>"> <i class="fa-solid fa-tag"></i> <%=data.category_desc %></a>
                </div>
          </div>
        </div>
        </div>
      <% }) %>
     
  </body>
