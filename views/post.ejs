<%- include('partials/header') -%>
<link href="https://cdn.jsdelivr.net/npm/daisyui@2.40.1/dist/full.css" rel="stylesheet" type="text/css" />
  <div class="container">
    <h1 class="text-5xl font-bold"><%= post.userName %>'s Post</h1>
    <div class="row justify-content-center mt-5">
      <div class="col-6">
        <img class="post-img" src="<%= post.image%>" />
        <div class="row justify-content-between">
          <form class="col-1" action="/post/likePost/<%= post.id %>?_method=PUT" method="POST">
            <button class="btn btn-success fa fa-heart" type="submit"></button>
          </form>
          <%if(post.likes > 1)  {%>
            <p class="likes"><%=post.likes %> likes</p>
             <%}else {%>
              <p class="likes"><%=post.likes %> like</p>
              <% } %>
          <%if(post.user==user.id){ %>
            <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST" class="col-3">
              <button class="btn btn-error fa fa-trash" type="submit"></button>
            </form>
            <%}%>
            <p class="description">
              Title <%= post.title %>
             </p>
             <p class="description">
              Caption <%= post.caption %>
             </p>
             <p class="post-time"><%=post.createdAt %></p>
        </div>
      </div>
      <div class="col-3 mt-5">
      </div>
      <div class="container">
        <div class="row justify-content-center mt-5">
          <ul class="row list-unstyled">
            <% for(var i=0; i< comment.length; i++) {%>
              <% if (comment[i].deleted == false){ %>
              <li class="col-6 justify-content-between mt-5">
                <%= comment[i].comment %>
                  <form class="col-1" action="/comment/likeComment/<%= comment[i]._id %>?_method=PUT" method="POST">
                    <button class="btn btn-primary fa fa-heart" type="submit"></button>
                    <input type="hidden" name="postid" value="<%= post.id %>">
                  </form>
                  <%if(post.user==user.id){ %>
                    <form action="/comments/deleteComment/<%= comment[i].id %>?_method=PUT" method="POST" class="col-3">
                      <button class="btn btn-error fa fa-trash" type="submit"></button>
                      <input type="hidden" name="postid" value="<%= post.id %>">
                    </form>
                    <%}%>
                  <h3 class="likes">Likes: <%= comment[i].likes %>
                  </h3>
              </li>
              <% } %>
              <% } %>
          </ul>
        </div>
      </div>
<!-- Comments Section -->
      
      <div class="mt-5">
        <h2>Add a Comment</h2>
        <form action="/comments/createComment/<%= post.id %>" method="POST">
          <div class="mb-3">
            <label for="comment" class="form-label" ></label>
            <input type="text" class="form-control" id="comment" name="comment" placeholder="Comment">
          </div>
          <button type="submit" class="btn btn-sucess"> Submit</button>
        </form>
      </div>
      <div class="col-6 mt-5">
        <a class="btn btn-sucess" href="/feed"><i class="fa-solid fa-arrow-left"></i>  Return to Feed</a>
      </div>
    </div>
  </div>

  <%- include('partials/footer') -%>